; -*- mode: clojure; -*-

(require '[clojure.java.classpath :as cp]
         '[clojure.java.shell :refer [sh]]
         '[clojure.java.io :as io]
         '[clojure.tools.logging :as log]
         '[clojure.string :as str])

(import 'clojure.lang.DynamicClassLoader
        '(java.net URL URLClassLoader))

(logging/init {:file "riemann.log"})

(defn current-class-loader
  []
  (let [ctx-class-loader (.getContextClassLoader (Thread/currentThread))]
    (take-while (complement nil?) (iterate #(.getParent %) ctx-class-loader))))

(defn add-classpath-url
  [url]
  (-> URLClassLoader
    (.getDeclaredMethod "addURL" (into-array Class [URL]))
    (doto (.setAccessible true))
    (.invoke (current-class-loader) (into-array URL [url]))))

(binding [*use-context-classloader* false]
  (.setContextClassLoader (Thread/currentThread) (.get Compiler/LOADER))
  (let [project-classpath (str/split (:out (sh "printenv" "CLASSPATH")) #":")]
    (doseq [url (map (comp io/as-url io/as-file) project-classpath)]
      (add-classpath-url url)))
  (load-file "blackout/core.clj"))

(require '[riemann.query :as q])

(let [host "127.0.0.1"]
  (tcp-server {:host host})
  (udp-server {:host host})
  (ws-server  {:host host})
  (repl-server))

(periodically-expire 5)

(let [index (index)]
  (streams
    (default :ttl 60
      index
      (expired
        (fn [event] (info "expired" event))))))
